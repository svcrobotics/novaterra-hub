<div class="flex flex-col h-screen bg-gray-50">

  <!-- Onglets en haut -->
  <div class="bg-white p-2 shadow-md flex space-x-2 overflow-x-auto">
    <button class="bg-blue-100 px-4 py-2 rounded-lg text-gray-700">Fichier 1.rb</button>
    <button class="bg-blue-100 px-4 py-2 rounded-lg text-gray-700">Fichier 2.html.erb</button>
    <!-- Onglets dynamiques plus tard -->
  </div>

  <!-- Corps principal -->
  <div class="flex flex-1 overflow-hidden">

    <!-- Sidebar Fichiers -->
    <aside class="w-64 bg-blue-100 p-4 overflow-y-auto shadow-md">
      <h2 class="font-bold text-gray-700 mb-4">📂 Fichiers</h2>
      <% @models.each do |model| %>
        <div class="text-blue-700 hover:underline text-sm mb-2">
          <%= link_to model, ide_path(file: model, type: "model") %>
        </div>
      <% end %>
      <% @controllers.each do |controller| %>
        <div class="text-green-700 hover:underline text-sm mb-2">
          <%= link_to controller, ide_path(file: controller, type: "controller") %>
        </div>
      <% end %>
      <% @views.each do |view| %>
        <div class="text-purple-700 hover:underline text-sm mb-2">
          <%= link_to view, ide_path(file: view, type: "view") %>
        </div>
      <% end %>
    </aside>

    <!-- Editeur principal -->
    <div class="flex-1 flex flex-col m-2 overflow-hidden">

      <div class="flex-1 bg-white p-4 rounded-lg shadow-md overflow-auto">
        <h2 class="font-bold text-gray-700 mb-4">📝 Éditeur</h2>
        <% if @file_content %>
          <pre class="text-sm text-gray-800 whitespace-pre-wrap"><%= @file_content %></pre>
        <% else %>
          <p class="text-gray-400">Sélectionnez un fichier pour commencer.</p>
        <% end %>
      </div>

      <!-- Zone TODO + Gantt en bas -->
      <div class="flex mt-2 space-x-2">

        <!-- TODO List -->
        <div class="flex-1 bg-pink-100 p-4 rounded-lg shadow-md overflow-auto">
          <h2 class="font-bold text-gray-700 mb-2">✅ To-do</h2>
          <ul class="list-disc list-inside text-gray-600 text-sm">
            <li>Créer un modèle</li>
            <li>Écrire une action de contrôleur</li>
            <li>Construire une vue</li>
          </ul>
        </div>

        <!-- Gantt -->
        <div class="flex-1 bg-yellow-100 p-4 rounded-lg shadow-md overflow-auto">
          <h2 class="font-bold text-gray-700 mb-2">📅 Planning</h2>
          <p class="text-gray-500 text-sm">Ton diagramme de Gantt sera affiché ici.</p>
        </div>

      </div>

    </div>

    <!-- Aide contextuelle -->
    <aside class="w-80 bg-green-100 p-4 overflow-y-auto shadow-md">
      <h2 class="font-bold text-gray-700 mb-4">💡 Aide</h2>
      <p class="text-gray-600">Ici apparaîtront les conseils et explications sur le fichier sélectionné.</p>
    </aside>

  </div>

</div>
