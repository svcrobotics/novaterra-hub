<div class="flex items-center justify-center min-h-[80vh] px-4">
  <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-700 mb-6 text-center">Inscription</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <!--<div class="mb-4">
        <%= f.label :username, class: "block text-gray-600 mb-2" %>
        <%= f.text_field :username, autofocus: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>-->

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-600 mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-600 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-gray-600 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="flex flex-col space-y-4">
        <%= f.submit "Créer mon compte", class: "button-primary" %>
        <%= link_to "Déjà inscrit ? Connexion", new_session_path(resource_name), class: "text-sm text-blue-400 hover:text-blue-600 text-center" %>
      </div>
    <% end %>
  </div>
</div>
