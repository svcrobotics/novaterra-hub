<div class="flex items-center justify-center min-h-[80vh] px-4">
  <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-700 mb-6 text-center">Connexion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :login, "Email", class: "block text-gray-600 mb-2" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Entrez votre email", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-600 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-600" %>
        </div>
      <% end -%>

      <div class="flex flex-col space-y-4">
        <%= f.submit "Se connecter", class: "button-primary" %>
        <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "text-sm text-blue-400 hover:text-blue-600 text-center" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-gray-500 text-sm">
      Pas encore de compte ?
      <%= link_to "Inscris-toi ici", new_registration_path(resource_name), class: "text-blue-400 hover:text-blue-600" %>
    </div>
  </div>
</div>
